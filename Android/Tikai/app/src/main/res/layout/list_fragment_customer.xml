<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListCustomerFragment">

    <ListView
        android:id="@+id/customers_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/button_add_customer"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_new"
        android:textStyle="bold"
        android:textColor="@color/flatui_clouds"
        android:background="@color/flatui_alizarin"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
