<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/residency_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_residency"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/residency_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/residency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="@string/text_dummy" />

        <TextView
            android:id="@+id/residency_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/text_dummy" />

        <TextView
            android:id="@+id/residency_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/text_dummy" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_delete_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:background="@null"
            android:tint="@color/flatui_midnight_blue"
            android:src="@android:drawable/ic_menu_delete"/>

        <ImageView
            android:id="@+id/button_update_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:background="@null"
            android:tint="@color/flatui_midnight_blue"
            android:src="@android:drawable/ic_menu_edit"/>


    </LinearLayout>

</RelativeLayout>