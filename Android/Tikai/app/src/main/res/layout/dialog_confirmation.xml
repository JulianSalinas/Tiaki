<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/line_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/text_alert"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/line_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/text_alert_question"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp">

                <Button
                    android:id="@+id/button_confirm"
                    style="?android:textAppearanceSmall"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/text_yes"
                    android:textStyle="bold"
                    android:textColor="@color/flatui_clouds"
                    android:background="@color/flatui_alizarin" />

                <Button
                    android:id="@+id/button_cancel"
                    style="?android:textAppearanceSmall"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/text_no"
                    android:textStyle="bold"
                    android:textColor="@color/flatui_clouds"
                    android:background="@color/flatui_pomegranate" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>