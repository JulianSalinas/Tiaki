<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".ActivityLogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_login"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_user" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_login"
                    android:layout_centerHorizontal="true"
                    android:textSize="25dp"
                    android:textColor="@color/flatui_midnight_blue"
                    android:text="@string/text_login"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/edit_text_login_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Identificación"
                android:inputType="number"
                android:fontFamily="sans-serif"
                android:layout_marginTop="16dp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edit_text_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:fontFamily="sans-serif"
                android:layout_marginTop="5dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/button_login"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Ingresar"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/flatui_clouds"
                android:background="@color/flatui_alizarin" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>